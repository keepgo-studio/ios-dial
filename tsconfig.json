{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES6", 
    "module": "ES6",
    "outDir": "dist",

    "sourceMap": true,
    "declaration": true,

    "esModuleInterop": true,
    "isolatedModules": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,      
    "removeComments": true,

    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["src", "webpack.config.js"],
  "exclude": ["node_modules", "dist"]
}